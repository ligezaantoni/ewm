= simple_form_for(@educational_method, url: url, html: { class: 'form-horizontal' }) do |f|

  - if @educational_method.errors.any?
    #error_explanation
      %h2= "#{pluralize(@educational_method.errors.count, "error")} prohibited this educational_method from being saved:"
      %ul
        - @educational_method.errors.full_messages.each do |msg|
          %li= msg

  .row
    .input-field.col.s12
      = f.text_field :name
      = f.label :name

  = submit_button_for t("nav.send"), icon="send"
