  %thead
    %tr
      %th= t(".name")
      %th= t(".level")
      %th= icon_link_to("#", "edit", class: "inactive")
      %th= icon_link_to("#", "delete", class: "inactive")

  %tbody
    - @abilities.each do |ability|
      %tr
        %td= ability.name
        %td= ability.level
        %td= icon_link_to edit_admin_ability_path(ability), "edit"
        %td= icon_link_to(admin_ability_path(ability), "delete", method: :delete, data: { confirm: t(".confirm_destroy") }, class: "danger")
        
= paginate @abilities
