= simple_form_for(@character_trait, url: url, html: { class: 'form-horizontal' }) do |f|

  - if @character_trait.errors.any?
    #error_explanation
      %h2= "#{pluralize(@character_trait.errors.count, "error")} prohibited this character_trait from being saved:"
      %ul
        - @character_trait.errors.full_messages.each do |msg|
          %li= msg
          
  .row
    .input-field.col.s8
      = f.text_field :name
      = f.label :name
  .input-field.col.s4
      = f.select :kind, character_trait_kind_options_for_select, include_blank: false
      = f.label :kind, active: false

  = submit_button_for t("nav.send"), icon="send"
