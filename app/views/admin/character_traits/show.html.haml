- content_for :notice do
  = notice
- content_for :breadcrumbs do
  = render_breadcrumbs

.card-panel
  .right
    = menu_link_to(t("nav.edit"), edit_admin_character_trait_path(@character_trait), "edit", class: "info btn-flat")
    = menu_link_to(t("nav.delete"), admin_character_trait_path(@character_trait), "delete", method: :delete, data: { confirm: t(".confirm_destroy") }, class: "danger btn-flat")

  %h5= @character_trait.name
  .card-content
    %ul.contact-information
      %li= @character_trait.kind
