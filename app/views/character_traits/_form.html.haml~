= simple_form_for(@character_trait, html: { class: 'form-horizontal' }) do |f|

  - if @character_trait.errors.any?
    #error_explanation
      %h2= "#{pluralize(@character_trait.errors.count, "error")} prohibited this character_trait from being saved:"
      %ul
        - @character_trait.errors.full_messages.each do |msg|
          %li= msg

  = f.text_field :name
  = f.input :kind, as: :select, collection: CharacterTrait.kinds, 
    include_blank: false

  = f.submit 'Save'
