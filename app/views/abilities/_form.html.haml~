= simple_form_for(@ability, html: { class: 'form-horizontal' }) do |f|

  - if @ability.errors.any?
    #error_explanation
      %h2= "#{pluralize(@ability.errors.count, "error")} prohibited this ability from being saved:"
      %ul
        - @ability.errors.full_messages.each do |msg|
          %li= msg

  = f.text_field :name
  = f.select :level, Ability.levels.keys.to_a, include_blank: false
  = f.text_area :requirements

  = f.submit 'Save'
