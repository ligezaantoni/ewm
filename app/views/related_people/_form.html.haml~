= simple_form_for(@related_person, html: { class: 'form-horizontal' }) do |f|

  - if @related_person.errors.any?
    #error_explanation
      %h2= "#{pluralize(@related_person.errors.count, "error")} prohibited this related_person from being saved:"
      %ul
        - @related_person.errors.full_messages.each do |msg|
          %li= msg

  = f.text_field :first_name
  = f.text_field :last_name
  = f.text_field :phone_number
  = f.text_field :email
  = f.select :role, RelatedPerson.roles.keys, include_blank: false

  = f.submit 'Save'
