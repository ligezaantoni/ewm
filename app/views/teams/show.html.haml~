.card-panel
  .right
    = menu_link_to(t("nav.edit"), edit_team_path(@team), "edit", class: "info btn-flat")
    = menu_link_to(t("nav.delete"), @team, "delete", method: :delete, data: { confirm: t(".confirm_destroy") }, class: "danger btn-flat")
  %h5= @team.short_name_with_patron
  .card-content
    - if @team.address.present?
      %i.material-icons.left
        place
      = @team.address
      
  %ul.collapsible.popout{"data-collapsible" => "accordion"}
    %li
      .collapsible-header.narrow
        = t(".characteristic")
      .collapsible-body
        %table
          %thead
            %tr
              %th.align-center.prompt= t(".opportunities")
              %th.align-center.prompt= t(".threats")
          %tbody
            %tr
              %td
                - @team.character_traits.opportunity.each do |o|
                  .tile.success-inverted= o.name
              %td
                - @team.character_traits.threat.each do |t|
                  .tile.danger-inverted= t.name

.nested-model
  = render partial: "scouts", locals: {team: @team, scouts: @scouts}
      
