= simple_form_for(@team, html: { class: 'form-horizontal' }) do |f|

  - if @team.errors.any?
    #error_explanation
      %h2= "#{pluralize(@team.errors.count, "error")} prohibited this team from being saved:"
      %ul
        - @team.errors.full_messages.each do |msg|
          %li= msg

  .row
    .input-field.col.s12
      = f.check_box :trial
      = f.label :trial
  .row
    .input-field.col.s2
      = f.input :number
    .input-field.col.s3
      = f.input :region
    .input-field.col.s3
      = f.select :kind, kind_options_for_select, include_blank: false
    .input-field.col.s4
      = f.input :name
  .row
    .input-field.col.s12
      = f.input :patron
  .row
    = f.simple_fields_for :address do |fa|
      .input-field.col.s6
        %i.material-icons.prefix
          home
        = fa.text_field :street_and_number
        = label_for_nested(:street_and_number, :address, @team)
      .input-field.col.s2
        = fa.text_field :postal_code
        = label_for_nested(:postal_code, :address, @team)
      .input-field.col.s4
        = fa.text_field :city
        = label_for_nested(:city, :address, @team)
  = submit_button_for t("nav.send"), icon="send"
