= simple_form_for(@team, html: { class: 'form-horizontal' }) do |f|

  - if @team.errors.any?
    #error_explanation
      %h2= "#{pluralize(@team.errors.count, "error")} prohibited this team from being saved:"
      %ul
        - @team.errors.full_messages.each do |msg|
          %li= msg


  = f.label :address
  = f.text_field :address
  = f.label :name
  = f.text_field :name
  = f.label :number
  = f.number_field :number
  = f.label :patron
  = f.text_field :patron

  = f.submit 'Save'
