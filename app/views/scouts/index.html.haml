  %tbody
    - @scouts.each do |scout|
      %tr
        %td= scout.team
        %td= scout.address
        %td= scout.first_name
        %td= scout.last_name
        %td= scout.age
        %td= scout.birthplace
        %td= scout.phone_number
        %td= scout.email
        %td= scout.allergies
        %td= scout.past_diseases
        %td= scout.vaccinations
        %td= scout.rank
        %td= scout.position
        %td= scout.promise_made_on
        %td= scout.patrol
        %td= link_to 'Show', scout
        %td= link_to 'Edit', edit_scout_path(scout)
        %td= link_to 'Destroy', scout, :method => :delete, :data => { :confirm => 'Are you sure?' }

