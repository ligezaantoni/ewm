= simple_form_for(@scout, html: { class: 'form-horizontal' }) do |f|

  - if @scout.errors.any?
    #error_explanation
      %h2= "#{pluralize(@scout.errors.count, "error")} prohibited this scout from being saved:"
      %ul
        - @scout.errors.full_messages.each do |msg|
          %li= msg

  = f.text_field :team
  = f.text_field :address
  = f.text_field :first_name
  = f.text_field :last_name
  = f.number_field :age
  = f.text_field :birthplace
  = f.text_field :phone_number
  = f.text_field :email
  = f.text_area :allergies
  = f.text_area :past_diseases
  = f.text_area :vaccinations
  = f.select :rank, Scout.ranks.keys, include_blank: false
  = f.select :position, Scout.positions.keys, include_blank: false
  = f.date_select :promise_made_on
  = f.text_field :patrol

  = f.submit 'Save'
