= simple_form_for(@address, html: { class: 'form-horizontal' }) do |f|

  - if @address.errors.any?
    #error_explanation
      %h2= "#{pluralize(@address.errors.count, "error")} prohibited this address from being saved:"
      %ul
        - @address.errors.full_messages.each do |msg|
          %li= msg

  = f.label :street_and_number
  = f.text_field :street_and_number
  = f.label :postal_code
  = f.text_field :postal_code
  = f.label :city
  = f.text_field :city

  = f.submit 'Save'
