- content_for :title do
  = t(".title")
- content_for :notice do
  = notice
- content_for :breadcrumbs do
  = render_breadcrumbs
  
%ul.collapsible{"data-collapsible" => "expandable"}
  %li
    .collapsible-header.active
      %h5= t(".individual_tasks")
    .collapsible-body
      = render partial: "tasks", locals: {tasks: @individual_tasks, taskable_type: "Scout"}
  %li
    .collapsible-header.active
      %h5= t(".goals")
    .collapsible-body
      = render partial: "tasks", locals: {tasks: @goals, taskable_type: "Team"}
