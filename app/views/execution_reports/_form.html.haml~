= simple_form_for(@execution_report, url: url, html: { class: 'form-horizontal' }) do |f|

  - if @execution_report.errors.any?
    #error_explanation
      %h2= "#{pluralize(@execution_report.errors.count, "error")} prohibited this execution_report from being saved:"
      %ul
        - @execution_report.errors.full_messages.each do |msg|
          %li= msg
          
  = f.association :activity, :collection => policy_scope(Activity.all), :value_method => :id, 
    as: :hidden
  
  .row
    .input-field.col.s12
      = f.text_field :content
      = f.label :content
  = f.text_field :activity
  = f.text_area :content

  = submit_button_for t("nav.send"), icon="send"
