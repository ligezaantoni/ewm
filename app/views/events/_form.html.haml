= form_for @event do |f|
  - if @event.errors.any?
    #error_explanation
      %h2= "#{pluralize(@event.errors.count, "error")} prohibited this event from being saved:"
      %ul
        - @event.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :team
    = f.text_field :team
  .field
    = f.label :starts_at
    = f.datetime_select :starts_at
  .field
    = f.label :place
    = f.text_field :place
  .actions
    = f.submit 'Save'
