= simple_form_for(@event, html: { class: 'form-horizontal' }) do |f|

  - if @event.errors.any?
    #error_explanation
      %h5= t("activerecord.errors.message", count: @event.errors.count)
      %ul
        - @event.errors.full_messages.each do |msg|
          %li= msg
  .row
    .input-field.col.s3
      = f.association :team, label: false
      = f.label :team, active: true
    .input-field.col.s3
      = f.text_field :place
      = f.label :place
    .input-field.col.s3
      = f.text_field :starts_on, as: :date, class: 'datepicker'
      = f.label :starts_on
      - if action_name == 'edit'
        = f.hint "Wybierz datÄ™ ponownie"
    .input-field.col.s3
      = f.text_field :starts_at
      = f.label :starts_at

  = submit_button_for t("nav.send"), icon="send"
