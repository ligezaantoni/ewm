%h1 Listing events

%table
  %thead
    %tr
      %th Team
      %th Starts at
      %th Place
      %th
      %th
      %th

  %tbody
    - @events.each do |event|
      %tr
        %td= event.team
        %td= event.starts_at
        %td= event.place
        %td= link_to 'Show', event
        %td= link_to 'Edit', edit_event_path(event)
        %td= link_to 'Destroy', event, :method => :delete, :data => { :confirm => 'Are you sure?' }

