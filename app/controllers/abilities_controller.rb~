class AbilitiesController < ApplicationController
  before_action :load_and_authorize_ability,
    only: [:show, :edit, :update, :destroy]

  def index
    authorize Ability
    
    @abilities = Ability.all
  end

  def show
  end

  def new
    @ability = Ability.new
    authorize @ability
  end

  def edit
  end

  def create
    @ability = Ability.new(ability_params)
    authorize @ability

    if @ability.save
      redirect_to @ability, notice: 'Ability was successfully created.'
    else
      render :new
    end
  end

  def update
    if @ability.update(ability_params)
      redirect_to @ability, notice: 'Ability was successfully updated.'
    else
      render :edit
    end
  end

  def destroy
    @ability.destroy
    redirect_to abilities_url, notice: 'Ability was successfully destroyed.'
  end

  private
  
  def load_and_authorize_ability
    @ability = Ability.find(params[:id])
    authorize @ability
  end

  def ability_params
    params.require(:ability).permit(*policy(@address || Address).permitted_attributes)
  end
end
